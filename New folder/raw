						<script>
							function toggleMenu() {
								const menu = document.getElementById('floatingMenu');
								if (menu.style.display === 'none' || menu.style.display === '') {
									menu.style.display = 'block'; // Show menu
								} else {
									menu.style.display = 'none'; // Hide menu
								}
							}
						</script>
